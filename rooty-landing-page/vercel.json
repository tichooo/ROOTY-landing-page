{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/register",
      "destination": "/api/register"
    },
    {
      "source": "/api/auth/login",
      "destination": "/api/login"
    },
    {
      "source": "/api/auth/verify-email",
      "destination": "/api/verify-email"
    },
    {
      "source": "/api/subscribe",
      "destination": "/api/subscribe"
    }
  ]
}
